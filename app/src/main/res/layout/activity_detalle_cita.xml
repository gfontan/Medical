<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Título de la actividad -->

    <!-- Nombre -->

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:padding="16dp"
        android:fontFamily="@font/montserrat"
        android:text="Detalles de la Cita"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />


    <ImageButton
        android:id="@+id/atrasCita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/textViewTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginEnd="359dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:src="@drawable/back_btn" />

    <TextView
        android:id="@+id/textDNI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTitle"
        android:layout_marginStart="16dp"
        android:layout_marginTop="46dp"
        android:fontFamily="@font/montserrat"
        android:text="DNI:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTitle"
        android:layout_marginStart="16dp"
        android:layout_marginTop="76dp"
        android:fontFamily="@font/montserrat"
        android:text="Nombre:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textApellidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textNombre"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat"
        android:text="Apellidos:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textRazon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textApellidos"
        android:layout_marginStart="16dp"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/montserrat"
        android:text="Razón:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textDisponibilidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textRazon"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat"
        android:text="Hora: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textRazon"
        android:layout_marginStart="16dp"
        android:layout_marginTop="39dp"
        android:fontFamily="@font/montserrat"
        android:text="Fecha: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textCita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textDisponibilidad"
        android:layout_marginStart="16dp"
        android:layout_marginTop="37dp"
        android:fontFamily="@font/montserrat"
        android:text="Cita: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textMedico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textCita"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/montserrat"
        android:text="Médico: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textHistorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textMedico"
        android:layout_marginStart="16dp"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/montserrat"
        android:text="Historial:"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/checkbox_pendiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textHistorial"
        android:text="Marcar como pendiente"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentEnd="true"/>

    <!-- Checkbox Eliminar cita -->
    <CheckBox
        android:id="@+id/checkbox_eliminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkbox_pendiente"
        android:text="Eliminar cita"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentEnd="true"/>

    <!-- Botón de Confirmación -->

    <!--  <Button
        android:id="@+id/button_confirmar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmar"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/white"
        android:layout_below="@id/checkbox_eliminar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/> -->

</RelativeLayout>
