<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primary"
    tools:context=".Seguridad">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/back_btn"
            android:padding="14dp"/>

        <TextView
            android:fontFamily="@font/montserrat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seguridad"
            android:layout_centerInParent="true"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="18sp"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/img_1"/>

            <TextView
                android:fontFamily="@font/montserrat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Laura DaSilva"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <TextView
                android:fontFamily="@font/montserrat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+34 675 48 38 49"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_gravity="center"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="152dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical"
                android:background="@drawable/ubicacion_emergencias"
                android:padding="15dp">

                <!-- Dark Mode / Night Mode -->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="222dp"
                        android:layout_height="105dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="6dp"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center_vertical"
                        android:text="Usar servicios de
                        ubicación para
                        emergencias"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />


                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/SwitchCompatUbicacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:switchMinWidth="50dp"
                        android:theme="@style/NotificacionSwitchSecurity"
                        tools:ignore="TouchTargetSizeCheck" />


                        </RelativeLayout>
                     </LinearLayout>

                        <ImageView
                            android:layout_marginStart="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/help"
                            app:tint="@color/white" />



                        <TextView
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Si los servicios de ubicacion para emergencias
complementarios están disponibles en tu zona,
cuando llames o enviés un mensaje de texto a
un numero de emergencia, tu dispositivo podrá
enviar su ubicación y otra información esencial
automaticamente a los servicios de emergencias"
                            android:layout_gravity="center"
                            android:fontFamily="@font/montserrat"
                            android:textColor="@color/white"
                            android:alpha="0.8"/>

                </LinearLayout>
            </LinearLayout>